generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String   @unique
  emailVerified Boolean  @default(true)
  password      String
  items         String[]
}

model Product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  code_product String   @unique
  name         String?
  price        Float
  image        String[]
}

model Customer {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  name   String?
  email  String?
  no     String?
  orders Order[]
}

model Order {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime
  total       Float
  customer_id String
  customer    Customer @relation(fields: [customer_id], references: [id])
  product     String[]
  xendit_id   String?
}
